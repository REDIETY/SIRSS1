@model IEnumerable<SIRSS.Models.SubjectGradesRecord>

@{
    ViewBag.Title = "Index";
}

<style>
    th {
        background-color: #008CC4;
    }

    table, th, td {
        padding: 8px;
        text-align: left;
        text-align-last: center;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }
</style>




<div class="content">
    <div class="container">


        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject.SubjectCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassExam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MidExam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FinalExam)
                </th>
                <th>
                    TotalResult
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.SubjectCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassExam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MidExam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinalExam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalResult)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
