@model IEnumerable<SIRSS.Models.School>

@{
    ViewBag.Title = "Index";
}

<style>
    th {
        background-color: #008CC4;
    }

    table, th, td {
        padding: 8px;
        text-align: left;
        text-align-last: center;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }
</style>




<div class="content">
    <div class="container">



        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Semester.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.schoolname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SchoolYearFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SchoolYearTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfRegistration)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semester.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.schoolname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolYearFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolYearTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfRegistration)
                    </td>
                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                     

                    </td>
                </tr>

            }

        </table>
</div></div>